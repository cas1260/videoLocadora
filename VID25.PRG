SAVE SCREEN TO VTELA_CLASSE
DO WHILE .T.
	IF VCLASSE = "N"
		NAO()
		EXIT
	ENDIF
	USE CLASSE INDEX CLASSEA
	VCODCLAS = SPACE(02)
	VNOMECLAS = SPACE(40)
	@ 20,05 CLEAR TO 22,73
	@ 20,05 TO 22,73 DOUBLE
	CENTRA(20,05,73,"[ F2 - PESQUISAR ]")
	@ 21,20 SAY "DESCRI€ÇO " GET VNOMECLAS PICT "@!"
	CLEAR GETS
	SET KEY -1 TO MOSTRACLASSE
	@ 21,06 SAY "CODIGO " GET VCODCLAS PICT "99"
	READ
	SET KEY -1
	IF LASTKEY() = 27
		EXIT
	ENDIF
	VCODCLAS = STRZERO(VAL(VCODCLAS),2)
	SEEK VCODCLAS
	IF EOF()
*		VCODCLAS = SPACE(02)
		VNOMECLAS = SPACE(40)
		VGRAVA = .T.
	ELSE
		VGRAVA = .F.
		VCODCLAS = STRZERO(VAL(CODCLAS),2)
		VNOMECLAS = NOMECLAS
	ENDIF
	@ 20,05 CLEAR TO 22,73
	@ 20,05 TO 22,73 DOUBLE
	@ 21,06 SAY "CODIGO  " + VCODCLAS 
	@ 21,20 SAY "DESCRI€ÇO " GET VNOMECLAS PICT "@!"
	READ
	IF LASTKEY() # 27
		IF VGRAVA = .T.
			APPEND BLANK
		ENDIF
		REPLACE NOMECLAS WITH VNOMECLAS
		REPLACE CODCLAS WITH VCODCLAS
	ENDIF
ENDDO
RESTORE SCREEN FROM VTELA_CLAS
RETURN
	