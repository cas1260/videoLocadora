SAVE SCREEN TO VTELA

VHORA=TIME()
VDATA=DATE()
@ 11,20 CLEAR TO 15,45
@ 11,20 TO 15,45 DOUBLE
@ 12,21 SAY "Hora..  :  " GET VHORA PICT "99:99:99"
@ 14,21 SAY "Data..:  " GET VDATA
READ
IF LASTKEY()#27
	IF UPDATED()
		DATA = DTOC(VDATA)
		SWPRUNCMD("TIME &VHORA",0,"","")
		SWPRUNCMD("DATE &DATA",0,"","")
	 ENDIF
ENDIF
RESTORE SCREEN FROM VTELA
RETURN